<!--pages/home/home.wxml-->
<!-- 1.小程序的数据绑定  {{}} -> Mustache -->
<view>hello {{name}}</view>
<view>年龄：{{age + 20}}</view>

<!-- 2. 列表展示  wx:for  (循环)-->
<view wx:for="{{students}}">
  {{item.id}}--{{item.name}}--{{item.age}}
</view>

<!-- 3.事件监听改变data
      a.size设置按钮是小按钮
      b.bindtap点击事件（不需要Mustache语法）
-->
<view>当前计数：{{conter}}</view>
<button size="mini" bindtap="handleBtnClick">+</button>
<button size="mini" bindtap="handleSubtraction">-</button>

<!-- 获取用户信息的方式 -->
<button size="mini" open-type="getUserInfo" bindgetuserinfo="handleGetUserInfo">
  获取授权
</button>

<!-- 获取用户信息的方式 -->
<open-data type="userNickName"></open-data>
<open-data type="userAvatarUrl"></open-data>
