<!--pages/text/text.wxml-->
<!-- 1.基本使用 -->
<text>Hello World\n</text>
<text>你好小程序\n</text>

<!-- 2.selectable:true 默认问题是不能被选中的-->
<text selectable="true">Hello Stella\n</text>
<text selectable>Hello Stella\n</text>


<!-- 3.space:决定文本空格大小 -->
<text>Hello Stella\n</text>
<text space="nbsp">Hello Stella\n</text>
<text space="emsp">Hello Stella\n</text>
<text space="ensp">Hello Stella\n</text>

<!-- 4.decode属性：是否解析文本 -->
<text decode>5 &gt; 3</text>

